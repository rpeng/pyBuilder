<fmproject>
	<default>
		<project>Canoe</project>
		<env>ant</env>
	</default>
	
	<list>
		<label>Build</label>
		<arg>-lib build/lib -Ddevice={0}</arg>
		<items>
			<item>
				<label>All</label>
				<arg>high</arg>
				<arg>low</arg>
				<arg>touch</arg>
				<arg>hightouch</arg>
				<arg>veryhigh</arg>
			</item>
			<item>
				<label>High</label>
				<arg>high</arg>
			</item>
			<item>
				<label>Low</label>
				<arg>low</arg>
			</item>
			<item>
				<label>Touch</label>
				<arg>touch</arg>
			</item>
			<item>
				<label>High Touch</label>
				<arg>hightouch</arg>
			</item>
			<item>
				<label>Very High</label>
				<arg>veryhigh</arg>
			</item>
		</items>
		<default>Low</default>
	</list>
	
	<list>
		<label>Application</label>
		<arg>-Dapplication={0}</arg>
		<items>
			<item>
				<label>All</label>
				<arg>canoe</arg>
				<arg>24h</arg>
				<arg>calgarysun</arg>
				<arg>edmontonsun</arg>
				<arg>journaldemontreal</arg>
				<arg>journaldequebec</arg>
				<arg>londonfreepress</arg>
				<arg>ottawasun</arg>
				<arg>torontosun</arg>
				<arg>winnipegsun</arg>
			</item>
			<item>
				<label>Canoe</label>
				<arg>canoe</arg>
			</item>
			<item>
				<label>24h</label>
				<arg>24h</arg>
			</item>
			<item>
				<label>Calgary Sun</label>
				<arg>calgarysun</arg>
			</item>
			<item>
				<label>Edmonton Sun</label>
				<arg>edmontonsun</arg>
			</item>
			<item>
				<label>Journal de Montreal</label>
				<arg>journaldemontreal</arg>
			</item>
			<item>
				<label>Journal de Quebec</label>
				<arg>journaldequebec</arg>
			</item>
			<item>
				<label>London Free Press</label>
				<arg>londonfreepress</arg>
			</item>
			<item>
				<label>Ottawa Sun</label>
				<arg>ottawasun</arg>
			</item>
			<item>
				<label>Toronto Sun</label>
				<arg>torontosun</arg>
			</item>
			<item>
				<label>Winnipeg Sun</label>
				<arg>winnipegsun</arg>
			</item>
		</items>
	</list>
	
	<lineedit>
		<label>OTA Path</label>
		<arg>-Dota.manual.path={0}</arg>
		<default>./rp/prod</default>
	</lineedit>

	<checkbox>
		<label>Update project files</label>
		<exec>svn up</exec>
		<default>true</default>
	</checkbox>
	
	<checkbox>
		<label>Upload to OTA</label>
		<arg>manualota</arg>
		<default>true</default>
	</checkbox>

</fmproject>
